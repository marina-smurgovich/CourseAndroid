<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yandex.smur.marina.task5">

    <permission android:name="com.yandex.smur.marina.task5.READ_DATABASE"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddPersonActivity"
            android:label="AddPersonActivity">
        </activity>
        <activity android:name=".EditContactActivity"
            android:label="EditContactActivity">
        </activity>

        <provider
            android:authorities="com.yandex.smur.marina.task5"
            android:name=".DataContentProvider"
            android:exported="true"
            android:readPermission="com.yandex.smur.marina.task5.READ_DATABASE"/>

    </application>

</manifest>